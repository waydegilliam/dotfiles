{
    "$schema": "https://json.schemastore.org/claude-code-settings.json",
    "env": {
        "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
        "DISABLE_AUTOUPDATER": "0",
        "ANTHROPIC_MODEL": "claude-opus-4-1-20250805"
    },
    "permissions": {
        "allow": [
            "Bash(cat:*)",
            "Bash(docker ps:*)",
            "Bash(docker compose build:*)",
            "Bash(find:*)",
            "Bash(grep:*)",
            "Bash(git status:*)",
            "Bash(ls:*)",
            "Bash(npm list:*)",
            "Bash(npm run format:*)",
            "Bash(npm run lint:*)",
            "Bash(npm run test:*)",
            "Bash(npm run typecheck:*)",
            "Bash(npx tsc --noEmit:*)",
            "Bash(rg:*)",
            "Bash(uv run mypy:*)",
            "Bash(uv pip check:*)",
            "Bash(uv pip show:*)",
            "Bash(uv pip tree:*)",
            "Bash(uv run pyright:*)",
            "Bash(uv run pytest:*)",
            "Bash(uv run ruff:*)",
            "WebFetch(domain:developers.google.com)",
            "WebFetch(domain:docs.anthropic.com)",
            "WebFetch(domain:docs.astral.sh)",
            "WebFetch(domain:docs.aws.amazon.com)",
            "WebFetch(domain:docs.pydantic.dev)",
            "WebFetch(domain:docs.temporal.io)",
            "WebFetch(domain:github.com)",
            "WebFetch(domain:lucide.dev)",
            "WebFetch(domain:openapi-ts.dev)",
            "WebFetch(domain:platejs.org)",
            "WebFetch(domain:python.temporal.io)",
            "WebFetch(domain:react.dev)",
            "WebFetch(domain:tanstack.com)"
        ]
    },
    "hooks": {
        "PostToolUse": [
            {
                "matcher": "Bash",
                "hooks": [
                    {
                        "type": "command",
                        "command": "echo \"cwd: $(pwd)\""
                    }
                ]
            }
        ]
    }
}
